{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : configuration{% endblock %}

{% block head %}
    {{ parent() }}
    <script defer src="{{ config.protocol }}{{ config.host }}/js/configuration.js"></script>
    <style>
      .texteadroite {
        text-align: right;
      }

      tr.details {
        display: none;
      }
    </style>
{% endblock %}

{% block body %}
    <h1>Gestion des actes</h1>
    <div>
        <div>

            {# Nav tabs #}
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation">
                    <a href="/configuration/actes-cat/" aria-controls="categories" role="tab">Catégories</a>
                </li>
                <li role="presentation" class="active">
                    <a href="/configuration/actes/" aria-controls="prescriptions" role="tab">Actes</a>
                </li>

            </ul>

            {# Tab panes #}
            <div class="tab-content">

                {# categories tab #}
                <div role="tabpanel" class="tab-pane active" id="prescriptions">

                    <p></p>
                    <button type="button" class="btn btn-primary pull-right reset-modal" data-toggle="modal" data-target="#modalNewCat">
                        Nouvel acte
                    </button>

                    {% for k, v in page.tabTypes %}
                        <h2 id="cat{{ v.0.cat }}">{{ v.0.catLabel }} <small><a class="btn btn-default btn-sm" href="/configuration/actes/{{ v.0.cat }}/"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></small></h2>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Label</th>
                                    <th>Code</th>
                                    <th class="texteadroite">Tarif SS</th>
                                    <th class="texteadroite">Dépassement</th>
                                    <th class="texteadroite">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for w in v %}
                                    <tr>
                                        <td>{{ w.id }}</td>
                                        <td>{{ w.label }}</td>
                                        <td>{{ w.code }}</td>
                                        <td class="texteadroite">{{ w.tarif|number_format(2, '.', ' ') }} / {{ w.tarifc|number_format(2, '.', ' ') }}</td>
                                        <td class="texteadroite">{{ w.depassement|number_format(2, '.', ' ') }} / {{ w.depassementc|number_format(2, '.', ' ') }}</td>
                                        <td class="texteadroite">{{ (w.tarif + w.depassement)|number_format(2, '.', ' ') }} / {{ w.totalc|number_format(2, '.', ' ') }}</td>
                                        <td>
                                            <button type="button" class="btn btn-default btn-xs typeToggleVisibility" aria-label="Editer" id="details{{ w.id }}">
                                                <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                                            </button>

                                            <button type="button" class="btn btn-default btn-xs edit-by-prim-key" aria-label="Editer" data-id="{{ w.id }}" data-table="actes" data-form="formModalNewCat" data-modal="modalNewCat">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </button>

                                            <button type="button" class="btn btn-default btn-xs delete-by-prim-key" aria-label="Supprimer" {% if w.enfants > 0 or w.type=="base" %} disabled="disabled" {% endif %} data-id="{{ w.id }}" data-table="actes">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                            </button>
                                        </td>
                                    </tr>
                                    {% for key,det in w.details %}
                                      <tr class="active small details details{{ w.id }}" >
                                        <td colspan="2"></td>
                                        <td>{{ key }}  ({{ det.pourcents }}%)</td>
                                        <td class="texteadroite">{{ det.tarif|number_format(2, '.', '')  }}</td>
                                        <td class="texteadroite">{{ det.depassement|number_format(2, '.', '')  }}</td>
                                        <td class="texteadroite">{{ (det.tarif + det.depassement)|number_format(2, '.', '')  }}</td>
                                        <td></td>
                                      </tr>
                                    {% endfor %}

                                {% endfor %}
                            </tbody>
                        </table>
                    {% endfor %}
                </div>

            </div>

        </div>

        {# modal new category #}
        <div class="modal fade" id="modalNewCat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Création / édition</h4>
                    </div>
                    <div class="modal-body">

                        <div class="alert alert-danger" role="alert" style="display : none;">
                            Merci de considérer les informations suivantes et de corriger les champs concernés :
                            <ul></ul>
                        </div>

                        <form id="formModalNewCat" action="/configuration/ajax/configActesCreate/">

                            <div class="form-group">
                                {{ f.input ({ 'input' : { 'type' : 'text', 'name' : 'label', 'placeholder' : 'intitulé', 'class' : 'form-control', 'autocomplete' : 'off' }, 'label' : { 'position' : 'before', 'label' : 'Label', } }) }}
                            </div>

                            <div class="form-group">
                                {{ f.input ({ 'input' : { 'type' : 'text', 'name' : 'code', 'placeholder' : 'code', 'class' : 'form-control', 'autocomplete' : 'off' }, 'label' : { 'position' : 'before', 'label' : 'Code', } }) }}
                            </div>

                            <div class="form-group">
                                {{ f.input ({ 'input' : { 'type' : 'text', 'name' : 'tarif', 'placeholder' : 'tarif ss', 'class' : 'form-control', 'autocomplete' : 'off' }, 'label' : { 'position' : 'before', 'label' : 'Tarif ss', } }) }}
                            </div>

                            <div class="form-group">
                                {{ f.input ({ 'input' : { 'type' : 'text', 'name' : 'depassement', 'placeholder' : 'dépassement', 'class' : 'form-control', 'autocomplete' : 'off' }, 'label' : { 'position' : 'before', 'label' : 'Dépassement', } }) }}
                            </div>

                            <div class="form-group">
                                {{ f.select ({ 'select' : { 'name' : 'cat', 'class' : 'form-control', 'autocomplete' : 'off', 'values' : page.catList, 'valueDefaut': '' }, 'label' : { 'position' : 'before', 'label' : 'Catégorie', } }) }}
                            </div>

                            <div class="form-group">
                                {{ f.textarea ({ 'textarea' : {'name' : 'details', 'placeholder' : 'détails', 'class' : 'form-control', 'autocomplete' : 'off', 'rows': '8' }, 'label' : { 'position' : 'before', 'label' : 'Détails', } }) }}
                            </div>

                          </form>
                        </div>
                        <div class="modal-footer"> <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button> <button type="button" class="btn btn-primary modal-save" data-form="formModalNewCat" data-modal="modalNewCat">Sauvegarder</button> </div> </div>
                                </div> </div> {% endblock %}
