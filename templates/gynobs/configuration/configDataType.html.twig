{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : configuration{% endblock %}

{% block head %}
{{ parent() }}
<script defer src="{{ config.protocol }}{{ config.host }}/js/configuration.js"></script>
{% endblock %}

{% block body %}
{% if page.groupe == "admin" %}
<h1>Types des données administratives</h1>
{% elseif page.groupe == "medical" %}
<h1>Types des données médicales</h1>
{% elseif page.groupe == "typecs" %}
	<h1>Types des données consultation</h1>
{% elseif page.groupe == "courrier" %}
	<h1>Types des données courrier</h1>
{% elseif page.groupe == "mail" %}
	<h1>Types des données mail</h1>
{% elseif page.groupe == "doc" %}
	<h1>Types des données document</h1>
{% elseif page.groupe == "ordo" %}
	<h1>Types des données ordonnance</h1>
{% elseif page.groupe == "reglement" %}
	<h1>Types des données règlement</h1>
{% elseif page.groupe == "dicom" %}
	<h1>Types des données Dicom</h1>
{% elseif page.groupe == "user" %}
		<h1>Types des données User</h1>
{% endif %}
<div>

	{# Nav tabs #}
	<ul class="nav nav-tabs" role="tablist">
		<li role="presentation" ><a href="/configuration/data-cat/{{ page.groupe }}/" aria-controls="categories" role="tab">Catégories</a></li>
		<li role="presentation" class="active"><a href="/configuration/data-type/{{ page.groupe }}/" aria-controls="types" role="tab">Types</a></li>
	</ul>

  {# Tab panes #}
	<div class="tab-content">

		{# type tab #}
		<div role="tabpanel" class="tab-pane active" id="types">

			<p></p>
			<button type="button" class="btn btn-primary pull-right reset-modal" data-toggle="modal" data-target="#modalNewType">
			Nouveau type
			</button>

			{% for k,v in page.tabTypes %}
				<h2 id="cat{{ v.0.cat }}">{{ v.0.catLabel }} <small><a class="btn btn-default btn-sm" href="/configuration/data-type/{{ page.groupe }}/{{ v.0.cat }}/"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></small></h2>
				<table class="table table-hover">
				<thead>
				<tr>
					<th>#</th>
					<th class="col-md-1">Nom</th>
					<th class="col-md-2">Label</th>
					<th class="col-md-1">Utilisé</th>
					<th class="col-md-1">Validation</th>
					<th class="col-md-1">Type&nbsp;formulaire</th>
					<th class="col-md-1">Vie</th>
					<th class="col-md-3">Description</th>
					<th class="col-md-2">Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for w in v %}
					<tr>
					<td>{{ w.id }}</td>
					<td>{{ w.name }}</td>
					<td>{{ w.label }}</td>
					<td>{{ w.enfants }}</td>
					<td>{{ w.validationRules }}</td>
					<td>{{ w.formType }}</td>
					<td>{{ w.durationLife }}</td>
					<td>{{ w.description }}</td>
					<td>
						<button type="button" class="btn btn-default btn-xs edit-by-prim-key" aria-label="Editer" data-id="{{ w.id }}" data-table="data_types" data-form="formModalNewType" data-modal="modalNewType">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
						</button>
						<button type="button" class="btn btn-default btn-xs duplicate" aria-label="Editer" data-id="{{ w.id }}" data-table="data_types" data-form="formModalNewType" data-modal="modalNewType">
						<span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
						</button>
						<button type="button" class="btn btn-default btn-xs delete-by-prim-key" aria-label="Supprimer" {% if w.enfants > 0  or w.type=="base" %}disabled="disabled"{% endif %} data-id="{{ w.id }}" data-table="data_types">
						<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
						</button>
					</td>
					</tr>
				{% endfor %}
				</tbody></table>
			{% endfor %}

		</div>

	</div>

</div>

{# modal new type #}
<div class="modal fade" id="modalNewType" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Création / édition type</h4>
      </div>
      <div class="modal-body">

	  		<div class="alert alert-danger" role="alert" style="display : none;">
				Merci de considérer les informations suivantes et de corriger les champs concernés :
				<ul>
				</ul>
			</div>

			<form id="formModalNewType" action="/configuration/ajax/configDataTypeCreate/" data-groupe="{{ page.groupe }}">
				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'name',
						'placeholder' : 'nom à usage interne, pas d\'espace, pas d\'accent',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Nom à usage interne',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'label',
						'placeholder' : 'nom principal',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Label',
					}
				}) }}
				</div>
				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'placeholder',
						'placeholder' : 'je suis moi-même un placeholder !',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Placeholder',
					}
				}) }}
				</div>
				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'description',
						'placeholder' : 'description',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Description',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.select ({
					'select' : {
						'name' : 'cat',
						'class' : 'form-control',
						'autocomplete' : 'off',
						'values' : page.catList,
						'valueDefaut': ''
					},
					'label' : {
						'position' : 'before',
						'label' : 'Catégorie',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'durationLife',
						'placeholder' : 'temps en seconde',
						'class' : 'form-control',
						'autocomplete' : 'off',
						'value' : '3600'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Durée de vie remplacement (s)',
					}
				}) }}
			</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'validationRules',
						'placeholder' : 'règle de validation',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Règle de validation',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'validationErrorMsg',
						'placeholder' : 'message si erreur à la validation',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Message erreur de validation',
					}
				}) }}
				</div>



				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'formType',
						'placeholder' : 'type de formulaire',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Type de formulaire',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.textarea ({
					'textarea' : {
						'name' : 'formValues',
						'placeholder' : 'valeurs par défaut',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Valeur par défaut',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'displayOrder',
						'placeholder' : 'ordre d\'affichage',
						'class' : 'form-control',
						'autocomplete' : 'off',
						'value' : '1',
					},
					'label' : {
						'position' : 'before',
						'label' : 'Ordre d\'affichage',
					}
				}) }}
				</div>

			</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
        <button type="button" class="btn btn-primary modal-save" data-form="formModalNewType" data-modal="modalNewType">Sauvegarder</button>
      </div>
    </div>
  </div>
</div>



{% endblock %}
