 #}

{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR{% endblock %}

{% block head %}
    {{ parent() }}
    <link type="text/css" href="{{ config.protocol }}{{ config.host }}/bower_components/magnific-popup/dist/magnific-popup.css" rel="stylesheet"/>

    <script defer src="{{ config.protocol }}{{ config.host }}/bower_components/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
    <script defer src="{{ config.protocol }}{{ config.host }}/js/dicom.js"></script>

    <style>
        .imageDc {
            display: inline-block;
            width: 330px;
            margin: 5px;
        }

        .imageDc img {
            display: inline-block;
            width: 330px;
            vertical-align: top;
            border: 10px solid #EEE;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <h1>Examen du
            {{ page.studyDcData.Datetime|date('d/m/Y H:i') }}
            de
            {{ page['patient']['administrativeDatas']['3']['value']|e }}
            {# firstname #}
            {{ page['patient']['administrativeDatas']['2']['value']|e }}
            {# name #}
            {% if page['patient']['administrativeDatas']['1']['value'] %}
                ({{ page['patient']['administrativeDatas']['1']['value']|e }}){% endif %}
            <small>
                {{ page['patient']['administrativeDatas']['8']['value']|e }}
                -
                {# birthdate #}
                {{ page['patient']['administrativeDatas']['8']['age']|e }}
                an{% if page['patient']['administrativeDatas']['8']['age'] > 0 %}s{% endif %}
                {# age #}

            </small>
        </h1>

        <ol class="breadcrumb">
            <li>
                <a href="/dicom/{{ page.patient.id }}/">{{ page['patient']['administrativeDatas']['3']['value']|e }}
                    {{ page['patient']['administrativeDatas']['2']['value']|e }}</a>
            </li>
            <li class="active">Examen du
                {{ page.studyDcData.Datetime|date('d/m/Y H:i') }}</li>
        </ol>

        {% if page.studyDcDataRapro %}
            <p class="alert alert-info">Cet examen est lié à l'acte
                <strong>{{ page.studyDcDataRapro.label }}
                    {% if page.studyDcDataRapro.titre %}
                        :
                        {{ page.studyDcDataRapro.titre }}</strong>
                {% endif %}
                du
                {{ page.studyDcDataRapro.creationDate|date('d/m/Y H:i') }}</p>
        {% endif %}

        <div class="panel panel-default">

            <div class="panel-heading">Images de l'étude</div>
            <div class="panel-body imagesList">
              <button type="button" data-status="unchecked" class="btn btn-default btn-sm selectAll">Tout sélectionner / déselectionner</button>
                <form action="/dicom/actions/makePdfWithDcImages/" method="post">
                    <input type="hidden" name="patientID" value="{{ page.patient.id }}"/>
                    <input type="hidden" name="dcStudyID" value="{{ page.studyDcData.ID }}"/>
                    {% for k, v in page.imagesPath %}
                        <span id="{{ k }}" class="imageDc">
                            <a href="{{ v }}"><img id="IMG{{ k }}" src="{{ v }}" alt=""/></a>
                            <input name="images[]" value="{{ k }}" type="checkbox" data-imgfor="IMG{{ k }}" autocomplete="off">
                        </span>
                    {% endfor %}
                    <span class="imageDc" style="text-align : right; vertical-align: bottom;">
                        <button type="submit" name="submitValue" value="makeZipWithDcImages" class="btn btn-primary">Générer un ZIP</button>
                        <button type="submit" name="submitValue" value="makePdfWithDcImages" class="btn btn-primary">Générer un PDF</button>
                    </span>
                </form>
            </div>
        </div>

        {% if page.studyDcDataSR %}
            <div class="panel panel-default">

                <div class="panel-heading">Tags DICOM SR</div>
                <div class="panel-body">
                    <p>Mesures remontées dans cette études</p>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Tag</th>
                        <th>Nom</th>
                        <th>Valeur</th>
                        <th>Unité</th>
                    </thead>
                    <tbody>
                        {% for k, v in page.studyDcDataSR %}
                            {% for l, w in v %}
                                <tr>
                                    <td>{{ k }}
                                        /
                                        {{ l }}</td>
                                    <td>{{ w.CodeMeaning }}</td>
                                    <td>{{ w.NumericValue }}</td>
                                    <td>{{ w.MeasurementUnits }}</td>

                                </tr>
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
