  {% if tag.paFA %}<li>Périmètre abdominal : {{ tag.paFA }} mm</li>{% endif %}
  {% if tag.e12femurA %}<li>Fémur : {{ tag.e12femurA }} mm</li>{% endif %}
  {% if tag.cnFA %}<li>Clarté nucale : {{ tag.cnFA }} mm</li>{% endif %}
  </ul>

  <h4>Morphologie</h4>
  <ul>
  <li>Pôle céphalique : {{ tag.morphoCephaFA|nl2br }}</li>
  <li>Abdomen : {{ tag.abdoFA|nl2br }}</li>
  <li>Membres : {{ tag.membresFA|nl2br }}</li>
  </ul>

  <div style="page-break-inside: avoid;">
  <h4>Annexes</h4>
