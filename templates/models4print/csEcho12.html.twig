{% set tag = page.courrier %}




<h2 style="text-align : center">{{ tag.identiteUsuelleTitreCourtDdn }}</h2>

<h2 style="margin-bottom : 0">Echographie obstétricale du 1er trimestre</h2>
<span class="t8">Réalisée sur échographe  mis en circulation le </span>
<br>
<p>
<span class="gras">Date d’examen :</span> {{ tag.date|date("d/m/Y") }} &nbsp;-&nbsp;
<span class="gras">Voie d’examen :</span> {{ tag.voieExamEcho12 }} &nbsp;-&nbsp;
<span class="gras">Conditions d’examen :</span> {{ tag.conditionsEcho12 }} {% if tag.imc > 0 %}<span class="t6">(IMC : {{ tag.imc }})</span>{% endif %}<br>
<span class="gras">Indication :</span> {{ tag.indicEcho12 }}<br>
</p>

{% if tag.DDR %}
<span class="gras">DDR :</span> {{ tag.DDR }} -	<span class="gras">DDG théorique : </span>{{ tag.ddg }}	- <span class="gras">Terme théorique : </span>{{ tag.termeDuJour }}{% else %}<span style="font-weight : bold">DDR :</span> non précisée{% endif %}


<p><span class="gras">Nombre de fœtus : {{ tag.nbFoetusEcho12 }}</span>
{% if tag.nbFoetusEcho12 > 1 %}
<br><span class="gras">Type de grossesse :</span> {{ tag.e12typeGro }}
<br><span class="gras">Membrane :</span> {{ tag.e12membrane }}
{% endif %}
</p>

<h3>{% if tag.nbFoetusEcho12 == 1 %}Fœtus unique{% else %}Fœtus A{% endif %}</h3>
  <h4>Vitalité</h4>
